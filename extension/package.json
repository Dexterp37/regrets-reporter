{
  "name": "youtube-regrets-reporter-extension",
  "description": "YouTube Regrets Reporter",
  "version": "0.0.0",
  "author": "Mozilla",
  "dependencies": {
    "@openwpm/webext-instrumentation": "../instrumentation/OpenWPM/automation/Extension/webext-instrumentation",
    "date-fns": "^2.0.0-alpha.25",
    "idb": "^2.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/firefox-webext-browser": "^63.0.0",
    "@types/mocha": "^5.2.5",
    "babel-core": "^6.26.3",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "doctoc": "^1.3.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.5.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-mozilla": "^0.13.0",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-typescript": "^0.12.0",
    "fixpack": "^2.3.1",
    "fs-extra": "^3.0.1",
    "fx-runner": "^1.0.11",
    "geckodriver": "^1.19.1",
    "get-firefox": "^3.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "jshint": "^2.9.5",
    "karma": "^4.1.0",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.2",
    "karma-coveralls": "^2.1.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-istanbuljs-reporter": "^0.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-webpack": "^3.0.0",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.11.0",
    "selenium-webdriver": "^3.6.0",
    "sinon": "4.0.0",
    "sinon-chrome": "2.2.1",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.4",
    "typescript-eslint-parser": "^20.0.0",
    "web-ext": "^3.2.1",
    "webpack": "^4.1.0",
    "webpack-cli": "^3.1.1",
    "yamljs": "^0.3.0"
  },
  "engines": {
    "node": ">=8.11.1"
  },
  "keywords": [
    "firefox",
    "mozilla",
    "youtube",
    "youtube-regrets"
  ],
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "build": "webpack && web-ext build",
    "docformat": "doctoc --title '**Contents**' docs/*.md && prettier '**/*.md' --write",
    "eslint": "eslint . --ext jsm,js,json",
    "eslint-fix": "npm run eslint -- --fix",
    "format": "prettier '**/*.{css,js,ts,json,jsm}' --trailing-comma=all --ignore-path=.eslintignore --write",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "npm run eslint",
    "lint:fixpack": "fixpack",
    "lint:tslint": "tslint src/**/*.ts",
    "lint:web-ext-lint": "web-ext lint",
    "postformat": "npm run docformat && npm run eslint-fix && fixpack",
    "prebuild": "npm-run-all webext-instrumentation:submodule-rsync webext-instrumentation:build",
    "prestart": "node ./ensure_minimum_node_version.js && npm run build",
    "pretest": "npm run prestart",
    "prewatch": "npm run prebuild",
    "start": "web-ext run",
    "test": "npm-run-all -n test:unit # test:func",
    "test:unit": "NODE_ENV=test karma start",
    "watch": "concurrently 'webpack --watch' 'web-ext run'",
    "webext-instrumentation:build": "cd node_modules/@openwpm/webext-instrumentation && npm run build && cd -",
    "webext-instrumentation:submodule-rsync": "rsync -r -t -p -o -g -x --stats --delete -l -D ../instrumentation/OpenWPM/automation/Extension/webext-instrumentation/ node_modules/@openwpm/webext-instrumentation/"
  }
}
